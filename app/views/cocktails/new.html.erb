<h1>New Cocktail Form</h1>

<form action="<%= create_cocktail_path %>" method="POST">
    <input type="hidden" value=<%= form_authenticity_token %> name="authenticity_token">
    <div>
        <label for="name">Name</label>
        <input type="text" name="name" id="name">
    </div>
    <div>
        <%# <label for="base">Base</label>
        <input type="text" name="base" id="base"> %>
        <h5>Base</h5>
        <select name="base_spirit_id">
            <% @base_spirits.each do |spirit| %>
            <option value=<%= spirit.id %>><%= spirit.name.capitalize %></option>
            <% end %>
        </select>
    </div>
    <div>
        <label for="instructions">Instructions</label>
        <textarea name="instructions" id="instructions"></textarea>
    </div>
    <input type="submit" value="Create Cocktail">
</form>